<% if(config.comment&&config.comment.changyan&&config.comment.changyan.appid){ %>
<div id="SOHUCS" sid="<%=describe.name?describe.name+' - ':''%><%=config.title%>" style="padding: 30px 35px 30px 35px;"></div>
<script charset="utf-8" type="text/javascript" src="https://changyan.sohu.com/upload/changyan.js"></script>
<script type="text/javascript">
	window.changyan.api.config({
		"appid": "<%=config.comment.changyan.appid%>",
		"conf": "<%=config.comment.changyan.conf%>"
	});
</script>
<% } else if(config.comment&&config.comment.gitalk&&config.comment.gitalk.clientID){ %>
	<div class="gitalk_container">
	      <style type="text/css">

	        .gitalk_container {
	          margin: 0 auto;
	          padding-bottom: 60px;
	          max-width: 85%;
	          color: #6190E8;
	          font-family: "PingFang SC", Helvetica, "Microsoft YaHei", Arial, sans-serif;
	        }
	        @media (max-width: 720px) {
	          .gitalk_container {
	            width: 90%;
	          }
	        }
	      </style>
	      <div id="gitalk-container"></div>
	      <link rel="stylesheet" href="https://unpkg.com/gitalk@latest/dist/gitalk.css">
	      <script src="https://unpkg.com/gitalk@latest/dist/gitalk.min.js"></script>
	      <script type="text/javascript">
	        var gitalk = new Gitalk({
	          clientID: "<%=config.comment.gitalk.clientID%>",
	          clientSecret: "<%=config.comment.gitalk.clientSecret%>",
	          repo: "<%=config.comment.gitalk.repo%>",
	          owner: "<%=config.comment.gitalk.owner%>",
	          admin: "<%=config.comment.gitalk.admin%>",
	          distractionFreeMode: "<%=config.comment.gitalk.distractionFreeMode%>"
	        });
	        gitalk.render('gitalk-container');
	      </script>

	    </div>
<%}%>
